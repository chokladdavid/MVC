@using System.Activities.Expressions
@using MVC_Lab_2_Grupp_3.Controllers
@using MVC_Lab_2_Grupp_3.Models

@{
    ViewBag.Title = "Play";
}

<h2>Play</h2>

@{
    <form>

        <div id="result">Curent Number is: @TjugoEttModels.CurrentNumber</div>

        @{ AjaxOptions ajaxOption = new AjaxOptions
               {
                   UpdateTargetId = "result",
                   InsertionMode = InsertionMode.Replace
               };
        }
        <p>
            @Ajax.ActionLink(
                linkText: "1",
                actionName: "NextTurn",
                routeValues: new { buttonValue = 1 },
                ajaxOptions: ajaxOption
            )
        </p>
        <p>
            @Ajax.ActionLink(
                linkText: "2",
                actionName: "NextTurn",
                routeValues: new { buttonValue = 2 },
                ajaxOptions: ajaxOption
            )
        </p>
        <H3><label id="ResultMessage"></label></H3>
    </form>

}

